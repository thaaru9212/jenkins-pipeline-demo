pipeline {
    agent any
    
    stages {
        stage("Build") {
            steps {
                echo "Building ..."
            }
            post {
                success {
                    emailext(
                        to: "ben10n100@gmail.com",
                        subject: "Build Status Email",
                        body: "Pipeline ${currentBuild.fullDisplayName} completed with status: ${currentBuild.result}",
                        attachLog: true
                    )
                }
            }
        }

        stage("Test") {
            steps {
                echo "Testing ..."
            }
        }

        stage("Deploy") {
            steps {
                echo "Deploying ..."
            }
        }

        stage("Complete") {
            steps {
                echo "Completed ..."
            }
        }
    }

    post {
        always {
            echo "Pipeline execution finished."
        }
    }
}

